<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0"
         metadata-complete="true">
<context-param>
  <param-name>url</param-name>
  <param-value>jdbc:mysql://localhost:3306//jdbcStudy</param-value>
</context-param>
  <servlet>
    <servlet-name>getcontext</servlet-name>
    <servlet-class>com.xiaokai.servlet02.GetServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>getcontext</servlet-name>
    <url-pattern>/getcontext</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>setcontext</servlet-name>
    <servlet-class>com.xiaokai.servlet02.SetServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>setcontext</servlet-name>
    <url-pattern>/setcontext</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>GetInitParameter</servlet-name>
    <servlet-class>com.xiaokai.servlet02.GetInitParameter</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>GetInitParameter</servlet-name>
    <url-pattern>/gp</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Dispatcher</servlet-name>
    <servlet-class>com.xiaokai.servlet02.Dispatcher</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Dispatcher</servlet-name>
    <url-pattern>/dp</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ResourcesReader</servlet-name>
    <servlet-class>com.xiaokai.servlet02.ResourcesReader</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ResourcesReader</servlet-name>
    <url-pattern>/RR</url-pattern>
  </servlet-mapping>
</web-app>